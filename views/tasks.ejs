
    <%- include('partials/navbar.ejs') %>
    
    <div class="bg-all flex flex-col justify-between page-load">

    



    <div class="wrapper">
      <section class="flex flex-col items-center">
        <h1 class="m-0"><%= goal.goalTitle %></h1>
        <p><%= goal.goalDescription %></p>
      </section>

      <span class="countdown font-mono text-2xl">
        <span style="--value:25;" class="minutes"></span>:
        <span style="--value:0;" class="seconds"></span>
      </span>
      <section>
      <button class="btn btn-active btn-primary">Start</button>
      <button class="btn btn-active btn-primary">Stop</button>

      </section>

      <button class="btn btn-active btn-primary add-task">Add Task</button>
      <p>Your Tasks</p>



      <ul class="task-list">
      <% tasks.forEach (el => { %>
        <li class="collapse project-boxes" tabindex="0">
          <div class="task-box <%= el.isComplete === true ? 'complete' : '' %> ">
            <p> <%= el.taskTitle %> </p>
            <section class="task-options">
                <form action="deleteTask/<%= el.id %>?_method=DELETE" method="POST" class="form-margin">
                  <button class="task-buttons dlt" type="submit"><i class="material-icons">clear</i></button>
                </form>
                <form action="completeTask/<%= el.id %>?_method=PUT" method="POST" class="form-margin">
                  <button class="task-buttons cmplt" type="submit"><i class="material-icons">done</i></button>
                </form>
                <i class="material-icons">keyboard_double_arrow_down</i>
            </section>
          </div>
          <div class="task-body collapse-content">
            <section>
                <p><%= el.taskDescription %></p>
            </section>
          </div>
        </li>
      <% }) %>
      </ul>




      <dialog id="add_task">  
      <div class="row">
          <form class="col s12 items-center" action="createTask/<%= goal.id %>" method="POST">
            <div class="row">
              <div class="input-field col s6">
                <input placeholder="Title" id="task_title" type="text" class="input input-bordered w-full max-w-xs bg-all" name="taskTitle" required>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <textarea id="task_description" placeholder="Description" cols="30" rows="10" class="textarea textarea-bordered bg-all" name="taskDescription"></textarea>
              </div>
            </div>
            <div class="row">
              <input type="submit" class="btn waves-effect waves-light">
                  <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
            </div>
          </form>
        </div>
      </dialog>
    </div>

  </div>
<script src="../js/tasks.js"></script>
<%- include('partials/footer.ejs') %>

