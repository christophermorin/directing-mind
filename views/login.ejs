<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="css/login.css"> -->
    <link rel="stylesheet" href="css/normalize.css">
    <link rel="stylesheet" href="css/main.css">

    

    <title>Login</title>
</head>
<body>
    <div class="hero min-h-screen bg-accent-content">
        <h1>Login</h1>
            <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el => { %>
                    <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %>    
            <% } %>
            <% if (locals.messages.info) { %>
                <% messages.info.forEach( el => { %>
                    <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %>    
            <% } %>
            <form action="/login" method="POST">
                <input type="email" name="email" placeholder="Email" class="input input-bordered w-full max-w-xs">
                <input type="password" name="password" placeholder="Password" class="input input-bordered w-full max-w-xs">
                <input type="submit" class="input input-bordered w-full max-w-xs">
            </form>
      </div>
</body>
</html>