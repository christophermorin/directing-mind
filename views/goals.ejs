<%- include('partials/navbar.ejs') %>
<div class="bg-all flex flex-col justify-between page-load">
  <div class="flex flex-col gap-5 items-center pt-2.5 md:ml-32">
    <button class="btn btn-active btn-primary add-goal">Add Project</button>
      <ul class="flex flex-col gap-5 justify-center md:flex-row flex-wrap">
          <% goals.forEach( goal => { %> 
            <% if (goal.isComplete === false) { %>
          <li class="w-72 shadows collapse rounded-md bg-zinc-900 lg:collapse-open text-white">
            <input type="checkbox" class="peer" /> 
              <div class="flex flex-col h-28 justify-between collapse-title">
                <div class="h-10 flex items-center pl-2 bg-gray-800"><h2 class="border-b-2 border-cyan-500 px-1 uppercase"><%= goal.goalTitle %></h2></div>
                  <div class="px-2.5 pb-1">
                    
                    <section class="flex justify-end gap-5">
                      <section class="flex items-center gap-2.5 px-2">
                        <span>
                          <%= goal.taskCount.toString() %> / <%= goal.taskCount.toString() %> 
                        </span>
                          <span class="material-icons">task</span>
                            <span class="material-icons">auto_stories</span>
                      </section>
                      <section class="lg:hidden">
                        <span class="material-icons peer-checked:bg-secondary peer-checked:text-secondary-content ">
                          expand_more
                        </span>
                      </section>
                    </section>
                </div>
              </div>
             
              <div class="collapse-content flex flex-col justify-between">
                <section class="rounded-md mb-2 text-xs text-stone-400 bg-stone-700/30 pl-1">
                  <% if (goal.goalDescription) { %>
                    <p class="p-1"> <%- goal.goalDescription %> </p>
                    <!-- else no description given -->
                  <% } else  { %>
                    <p class="text-center">No description</p>
                  <% } %>
                </section>
                <section>
                  <ul class="flex flex-col gap-1">
                    <% tasks.forEach( task => { %>
                      <% if (task.goalId === goal.id) { %>
                      <li>
                        <section class="shadows flex justify-between p-2.5 border border-gray-900 rounded-xl bg-gray-800 text-sm hover:bg-gray-600 ease-in duration-150">
                          <h3><%= task.taskTitle %></h3>
                            <a href="tasks/<%= goal._id%>" class="flex justify-center items-center">
                              <i class="material-icons">start</i>
                            </a>
                        </section>
                      </li>
                      
                      <% } %>
                      <!-- else no task entered -->
                    <% }) %>
                  </ul>
                </section>
                <div class="flex flex-col gap-2 mt-2">
                  <section class="flex justify-center gap-2">
                    <a href="tasks/<%= goal._id%>">
                      <button class="uppercase btn-active btn w-24 shadows project-btn text-stone-400">Begin</button>
                    </a>
                    <a href="journal/<%= goal._id%>">
                      <button class="btn btn-active w-24 shadows project-btn text-stone-400">Journal</button>
                    </a>
                  </section>
                  <div class="flex justify-end gap-4 pt-4">
              <!-- Delete Project Dialog -->
                    <dialog id="deleteProject">
                      <p>This will also delete all tasks and journals for this Project. Are you sure?</p>
                      <div class="flex justify-between">
                        <form action="/goals/deleteProject/<%= goal.id %>?_method=DELETE" method="POST">
                          <button class="btn btn-active btn-primary" type="submit">Yes</button>
                        </form>
                        <button class="btn btn-active btn-primary close-delete">No</button>
                      </div>
                    </dialog>
                    <button class="dlt dlt-project">
                      <i class="material-icons bg-stone-700/30 rounded-full p-1 hover:bg-red-900 ease-in duration-150">clear</i>
                    </button>
                    <!-- Complete Project Dialog -->
                    <dialog id="completeProject">
                      <p>Congratulations!</p>
                      <div class="flex justify-between w-60">
                        <form action="/goals/completeProject/<%= goal.id %>?_method=PUT" method="POST">
                          <button class="btn btn-active btn-primary" type="submit">Confirm!</button>
                        </form>
                        <button class="btn btn-active btn-primary close-complete" type="submit">Not yet!</button>
                      </div>
                    </dialog>
                    <button class="complete-project cmplt">
                      <i class="material-icons bg-stone-700/30 rounded-full p-1 hover:bg-green-900 ease-in duration-150">done</i>
                    </button>

                   

                  </div>
                </div>
              </div>
            </li>
              <% } %>
            <% }) %>
          </ul>
         
        <dialog id="add_goal">
            <div class="row flex flex-col">
                <form class="col s12 items-center" action="/goals/createGoal" method="POST">
                  <div class="row">
                    <div class="input-field col s6">
                      <input placeholder="Title" id="goal_title" type="text" class="input input-bordered w-full max-w-xs bg-all" name="goalTitle" required>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12" id="editor-field">
                      <textarea id="editor" placeholder="Description" cols="25" rows="10" class="textarea textarea-bordered bg-all" name="goalDescription"></textarea>
                    </div>
                  </div>
                  <div class="row">
                    <input type="submit" class="btn">
                  </div>
                </form>
              </div>
        </dialog>
    </div>
</div>
<script src="../js/goals.js"></script>
  <%- include('partials/footer.ejs') %>